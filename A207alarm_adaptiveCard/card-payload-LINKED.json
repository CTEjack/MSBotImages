{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.2",
    "body": [
        {
            "type": "TextBlock",
            "text": "${title}",
            "size": "Large",
            "weight": "Bolder",
            "isSubtle": true
        },
        {
            "type": "TextBlock",
            "text": "${answer}",
            "spacing": "Large",
            "wrap": true,
            "separator": true
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${alarmCauseTitle}",
                            "wrap": true,
                            "height": "stretch",
                            "size": "Large",
                            "color": "Dark",
                            "fontType": "Default",
                            "isSubtle": true
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${alarmCause}",
                            "wrap": true,
                            "horizontalAlignment": "Right",
                            "height": "stretch"
                        }
                    ],
                    "horizontalAlignment": "Right"
                }
            ],
            "separator": true,
            "spacing": "ExtraLarge"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${alarmResetTitle}",
                            "wrap": true,
                            "height": "stretch",
                            "size": "Large",
                            "color": "Dark",
                            "isSubtle": true
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${alarmReset}",
                            "wrap": true,
                            "horizontalAlignment": "Right",
                            "separator": true
                        }
                    ]
                }
            ],
            "separator": true,
            "spacing": "ExtraLarge"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.OpenUrl",
                    "title": "More About This Alarm",
                    "url": "${moreInfoUrl}"
                },
                {
                    "type": "Action.OpenUrl",
                    "title": "Operations Manual",
                    "url": "${opsManualURL}"
                },
                {
                    "type": "Action.OpenUrl",
                    "title": "Work Package",
                    "url": "${taskItemUrl}"
                },
                {
                    "type": "Action.ShowCard",
                    "title": "Feedback",
                    "card": {
                        "type": "AdaptiveCard",
                        "body": [
                            {
                                "type": "TextBlock",
                                "text": "Is this answer relevant to you?"
                            },
                            {
                                "type": "Input.ChoiceSet",
                                "choices": [
                                    {
                                        "title": "Yes",
                                        "value": "Yes"
                                    },
                                    {
                                        "title": "Sort of",
                                        "value": "Sort of"
                                    },
                                    {
                                        "title": "No",
                                        "value": "No"
                                    }
                                ],
                                "placeholder": "Is this answer relevant to you?",
                                "isMultiSelect": true,
                                "separator": true,
                                "id": "UserFeedback"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}