{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "size": "Large",
            "weight": "Bolder",
            "text": "${title}"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "height": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${answer}",
                            "wrap": true,
                            "spacing": "Large"
                        }
                    ],
                    "spacing": "ExtraLarge"
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "url": "${thumbURL}",
                            "horizontalAlignment": "Right",
                            "size": "Large"
                        }
                    ]
                }
            ],
            "selectAction": {
                "type": "Action.OpenUrl",
                "url": "${taskItemUrl}"
            }
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "This unit has been flagged in a product recall",
                            "wrap": true,
                            "separator": true,
                            "spacing": "ExtraLarge",
                            "size": "Large",
                            "isSubtle": true
                        }
                    ]
                }
            ],
            "separator": true,
            "spacing": "ExtraLarge"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Mandatory Safety Rework:",
                            "wrap": true,
                            "size": "Large",
                            "color": "Attention",
                            "isSubtle": true
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Service Bulletin DSB14-0014D",
                            "wrap": true,
                            "horizontalAlignment": "Right",
                            "spacing": "None"
                        },
                        {
                            "type": "TextBlock",
                            "text": "Control Circuit Breaker Recall",
                            "wrap": true,
                            "horizontalAlignment": "Right",
                            "spacing": "None",
                            "weight": "Bolder"
                        }
                    ]
                }
            ]
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.OpenUrl",
                    "title": "Service Bulletin",
                    "url": "${serviceBulletinUrl}"
                },
                {
                    "type": "Action.OpenUrl",
                    "title": "More Info",
                    "url": "${taskItemUrl}"
                },
                {
                    "type": "Action.OpenUrl",
                    "title": "Work Package",
                    "url": "${workPackageUrl}"
                },
                {
                    "type": "Action.ShowCard",
                    "title": "Feedback",
                    "card": {
                        "type": "AdaptiveCard",
                        "body": [
                            {
                                "type": "TextBlock",
                                "text": "Is this answer relevant to you?"
                            },
                            {
                                "type": "Input.ChoiceSet",
                                "choices": [
                                    {
                                        "title": "Yes",
                                        "value": "Yes"
                                    },
                                    {
                                        "title": "Sort of",
                                        "value": "Sort of"
                                    },
                                    {
                                        "title": "No",
                                        "value": "No"
                                    }
                                ],
                                "placeholder": "Is this answer relevant to you?",
                                "isMultiSelect": true,
                                "separator": true,
                                "id": "UserFeedback"
                            }
                        ]
                    }
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2"
}