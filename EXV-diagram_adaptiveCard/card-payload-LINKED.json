{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "size": "large",
            "weight": "bolder",
            "text": "${title}"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "height": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${botOutput}",
                            "wrap": true
                        }
                    ]
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "url": "${thumbURL}",
                            "horizontalAlignment": "Right",
                            "selectAction": {
                                "type": "Action.OpenUrl",
                                "url": "${viewImg}"
                            }
                        }
                    ],
                    "width": "auto"
                }
            ]
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.OpenUrl",
                    "title": "View Cutaway",
                    "url": "${viewImg}"
                },
                {
                    "type": "Action.OpenUrl",
                    "title": "Work Package",
                    "url": "${taskItemUrl}"
                },
                {
                    "type": "Action.ShowCard",
                    "title": "Feedback",
                    "card": {
                        "type": "AdaptiveCard",
                        "body": [
                            {
                                "type": "TextBlock",
                                "text": "Is this answer relevant to you?"
                            },
                            {
                                "type": "Input.ChoiceSet",
                                "choices": [
                                    {
                                        "title": "Yes",
                                        "value": "Yes"
                                    },
                                    {
                                        "title": "Sort of",
                                        "value": "Sort of"
                                    },
                                    {
                                        "title": "No",
                                        "value": "No"
                                    }
                                ],
                                "placeholder": "Is this answer relevant to you?",
                                "isMultiSelect": true,
                                "separator": true,
                                "id": "UserFeedback"
                            }
                        ]
                    }
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2"
}