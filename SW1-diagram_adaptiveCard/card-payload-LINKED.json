{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "size": "Large",
            "weight": "Bolder",
            "text": "${title}"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "height": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${answer}",
                            "wrap": true
                        }
                    ]
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "url": "${thumbURL}",
                            "horizontalAlignment": "Right",
                            "selectAction": {
                                "type": "Action.OpenUrl",
                                "url": "${viewImg}"
                            },
                            "size": "Large"
                        }
                    ],
                    "width": "auto"
                }
            ]
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Another technician has uploaded an image relevant to this query:",
                            "wrap": true,
                            "separator": true,
                            "spacing": "ExtraLarge",
                            "size": "Large",
                            "isSubtle": true
                        }
                    ]
                }
            ],
            "separator": true,
            "spacing": "ExtraLarge"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${userImgText}",
                            "wrap": true,
                            "color": "Dark",
                            "isSubtle": true
                        }
                    ],
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "url": "${userImgThumb}",
                            "horizontalAlignment": "Center",
                            "size": "Stretch"
                        }
                    ],
                    "backgroundImage": {
                        "horizontalAlignment": "Center"
                    },
                    "height": "stretch",
                    "selectAction": {
                        "type": "Action.OpenUrl",
                        "url": "${userImg}"
                    }
                }
            ],
            "spacing": "None"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.OpenUrl",
                    "title": "More SW1 Info",
                    "url": "${taskItemUrl}"
                },
                {
                    "type": "Action.OpenUrl",
                    "title": "View User Image",
                    "url": "${userImg}"
                },
                {
                    "type": "Action.OpenUrl",
                    "title": "Work Package",
                    "url": "${taskItemUrl}"
                },
                {
                    "type": "Action.ShowCard",
                    "title": "Feedback",
                    "card": {
                        "type": "AdaptiveCard",
                        "body": [
                            {
                                "type": "TextBlock",
                                "text": "Is this answer relevant to you?"
                            },
                            {
                                "type": "Input.ChoiceSet",
                                "choices": [
                                    {
                                        "title": "Yes",
                                        "value": "Yes"
                                    },
                                    {
                                        "title": "Sort of",
                                        "value": "Sort of"
                                    },
                                    {
                                        "title": "No",
                                        "value": "No"
                                    }
                                ],
                                "placeholder": "Is this answer relevant to you?",
                                "isMultiSelect": true,
                                "separator": true,
                                "id": "UserFeedback"
                            }
                        ]
                    }
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2"
}