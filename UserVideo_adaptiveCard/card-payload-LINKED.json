{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.2",
    "fallbackText": "This card requires Media to be viewed. Ask your platform to update to Adaptive Cards v1.1 for this and more!",
    "body": [
        {
            "type": "TextBlock",
            "text": "${title}",
            "wrap": true,
            "size": "large",
            "weight": "bolder",
            "isSubtle": true
        },
        {
            "type": "TextBlock",
            "text": "Submitted by",
            "wrap": true,
            "isSubtle": true,
            "spacing": "Small"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "url": "${avatarIMG}",
                            "width": "30px",
                            "spacing": "None"
                        }
                    ],
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${author}",
                            "wrap": true,
                            "weight": "Bolder",
                            "spacing": "None"
                        },
                        {
                            "type": "TextBlock",
                            "text": "${submissionDate}",
                            "wrap": true,
                            "spacing": "None",
                            "isSubtle": true,
                            "size": "Small"
                        }
                    ],
                    "verticalContentAlignment": "Center"
                }
            ],
            "spacing": "None"
        },
        {
            "type": "Media",
            "poster": "${posterUrl}",
            "sources": [
                {
                    "mimeType": "video/mp4",
                    "url": "${videoURL}"
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "Action.OpenUrl",
            "title": "Fullscreen",
            "url": "${videoURL}"
        },
        {
            "type": "Action.OpenUrl",
            "title": "Work Package",
            "url": "https://contextere.com"
        }
    ]
}