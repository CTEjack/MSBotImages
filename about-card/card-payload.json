{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "Image",
            "url": "${$root.image}"
        },
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "${title}"
        },
        {
            "type": "TextBlock",
            "text": "${description}",
            "wrap": true
        }
    ],
    "actions": [
        {
            "type": "Action.OpenUrl",
            "title": "Learn more",
            "url": "${url}"
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2",
    "backgroundImage": {
        "horizontalAlignment": "Center"
    }
}