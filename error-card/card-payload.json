{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.2",
    "body": [
        {
            "type": "TextBlock",
            "text": "${title}",
            "size": "Large",
            "weight": "Bolder",
            "isSubtle": true
        },
        {
            "type": "TextBlock",
            "text": "${text1}",
            "spacing": "Large",
            "wrap": true,
            "separator": true
        },
        {
            "type": "TextBlock",
            "text": "${text2}",
            "spacing": "Large",
            "wrap": true
        },
        {
            "type": "ActionSet",
            "actions": [
                  {
                    "type": "Action.OpenUrl",
                    "title": "Take a Tour",
                    "url": "https://teams.microsoft.com/l/task/be5caee0-f2bc-11ea-b597-ef970e2f5141?url=https://contextere.z9.web.core.windows.net/tour&height=large&width=large"
                },
                {
                    "type": "Action.OpenUrl",
                    "title": "Visit our support page",
                    "url": "${supportURL}"
                }
            ]
        }
    ]
}