{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "${title}"
        },
        {
            "type": "Image",
            "url": "${imgUrl}"
        },
        {
            "type": "TextBlock",
            "text": "${description}",
            "wrap": true
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${subheader1}",
                            "wrap": true,
                            "weight": "Bolder"
                        },
                        {
                            "type": "TextBlock",
                            "text": "${bul1}",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "text": "${bul2}",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "text": "${bul3}",
                            "wrap": true
                        }
                    ]
                }
            ],
            "spacing": "Large"
        },
        {
            "type": "TextBlock",
            "text": "${subheader2}",
            "weight": "Bolder",
            "wrap": true,
            "separator": true
        },
        {
            "type": "RichTextBlock",
            "inlines": [
                {
                    "type": "TextRun",
                    "text": "${q1}",
                    "weight": "Bolder",
                    "fontType": "Monospace",
                    "size": "Medium",
                    "color": "Accent"
                }
            ]
        },
        {
            "type": "RichTextBlock",
            "inlines": [
                {
                    "type": "TextRun",
                    "text": "${q2}",
                    "weight": "Bolder",
                    "fontType": "Monospace",
                    "size": "Medium",
                    "color": "Accent"
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "Action.OpenUrl",
            "title": "Take a Tour",
            "url": "${url}"
        },
        {
            "type": "Action.OpenUrl",
            "title": "About Contextere",
            "url": "https://contextere.com/"
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2"
}