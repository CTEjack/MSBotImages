{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "${title}"
        },
        {
            "type": "TextBlock",
            "text": "${description}",
            "wrap": true
        },
        {
            "type": "Image",
            "url": "https://contextere.blob.core.windows.net/hvac/Queries-card_header_image.jpg"
        },
        {
            "type": "TextBlock",
            "text": "${subheader}",
            "weight": "Bolder",
            "wrap": true
        },
        {
            "type": "RichTextBlock",
            "inlines": [
                {
                    "type": "TextRun",
                    "text": "${q1}",
                    "weight": "Bolder",
                    "fontType": "Monospace",
                    "size": "Medium",
                    "color": "Accent"
                }
            ]
        },
        {
            "type": "RichTextBlock",
            "inlines": [
                {
                    "type": "TextRun",
                    "text": "${q2}",
                    "weight": "Bolder",
                    "fontType": "Monospace",
                    "size": "Medium",
                    "color": "Accent"
                }
            ]
        },
        {
            "type": "RichTextBlock",
            "inlines": [
                {
                    "type": "TextRun",
                    "text": "${q3}",
                    "weight": "Bolder",
                    "fontType": "Monospace",
                    "size": "Medium",
                    "color": "Accent"
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "Action.OpenUrl",
            "title": "Take a Tour",
            "url": "${url}"
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2"
}