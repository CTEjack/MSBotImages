{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.2",
    "body": [
        {
            "type": "TextBlock",
            "text": "${title}",
            "size": "Large",
            "weight": "Bolder",
            "isSubtle": true
        },
        {
            "type": "TextBlock",
            "text": "${text1}",
            "spacing": "Large",
            "wrap": true,
            "separator": true
        },
        {
            "type": "TextBlock",
            "text": "${text2}",
            "spacing": "Large",
            "wrap": true
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.OpenUrl",
                    "title": "Visit our support page",
                    "url": "${supportURL}"
                }
            ]
        }
    ]
}