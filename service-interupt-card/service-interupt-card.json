{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
            "type": "Image",
            "url": "https://contextere.blob.core.windows.net/hvac/WarningIcon.png",
            "size": "Small",
            "horizontalAlignment": "Center"
        },
        {
            "type": "TextBlock",
            "text": "Service Interruption",
            "size": "Large",
            "weight": "Bolder",
            "isSubtle": true,
            "horizontalAlignment": "Center",
            "color": "Warning"
        },
        {
            "type": "TextBlock",
            "text": "Our system has encountered an interruption and is working to re-establish a connection. Please try your query again",
            "spacing": "Large",
            "wrap": true,
            "separator": true
        },
        {
            "type": "TextBlock",
            "text": "If the problem persists, please submit a ticket on our support page.",
            "spacing": "Medium",
            "wrap": true
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.OpenUrl",
                    "title": "Visit our support page",
                    "url": "https://contextere.com/support"
                }
            ]
        }
    ]
}